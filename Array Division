#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n,k;cin>>n>>k;
    vector<int> v(n);
    for(auto &x:v) cin>>x;
    long long l=*max_element(v.begin(),v.end());
    long long h=accumulate(v.begin(),v.end(),0LL);
    long long r=h;
    while(l<=h)
    {
        long long m=l+(h-l)/2;
        int c=1;
        long long s=0;
        for(int x:v)
        {
            if(s+x>m)
            {
                c++;
                s=x;
            }
            else s+=x;
        }
        if(c<=k)
        {
            r=m;
            h=m-1;
        }
        else l=m+1;
    }
    cout<<r<<"\n";
}
