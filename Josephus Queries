#include<bits/stdc++.h>
using namespace std;
long long rec(long long n,long long k)
{
    if(n==1) return 1;
    if(k<=(n+1)/2)
    {
        if(2*k>n) return ((2*k)%n==0?:(2*k)%n);
        return 2*k;
    }
    long long x=rec(n/2,k-(n+1)/2);
    if(n%2==1) return 2*x+1;
    return 2*x-1;

}
int main()
{
    long long q;cin>>q;
    while(q--)
    {
        long long n,k;
        cin>>n>>k;
        cout<<rec(n,k)<<"\n";
    }
}
