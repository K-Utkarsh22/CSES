#include <bits/stdc++.h>
#define ll long long
using namespace std;
ll mod=1e9+7;
void collect(ll n,vector<ll> &dp)
{
    dp[0]=1;
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=6;j++)
        {
            if(i>=j)
                dp[i]=(dp[i]+dp[i-j])%mod;
        }
    }
}
int main()
{
    int n;cin>>n;
    vector<long long> dp(n+1,0);
    collect(n,dp);
    cout<<dp[n]<<"\n";
}
