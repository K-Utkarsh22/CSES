#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;cin>>n;
    vector<long long> v(n),p(n);
    for(auto &x:v) cin>>x;
    p[0]=v[0];
    for(int i=1;i<n;i++) p[i]=p[i-1]+v[i];
    for(auto &x:p) x=(x%n+n)%n;
    map<int,long long> m;
    for(auto &x:p)
    {
        m[x]++;
    }
    long long c=0;
    for(auto &x:m)
    {
        long long k=x.second;
        c+=(k*(k-1)/2);
        if(x.first==0) c+=k;
    }
    cout<<c<<"\n";
}
