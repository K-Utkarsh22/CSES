#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;cin>>n;
    vector<pair<int,int>>v(n);
    for(auto&x:v)
        cin>>x.second>>x.first;
    sort(v.begin(),v.end());
    int c=0,l=0;
    for(auto &x:v)
    {
        if(x.second>=l)
        {
            l=x.first;
            c++;
        }
    }
    cout<<c;
}
