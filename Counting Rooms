#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,m;
    cin>>n>>m;
    vector<string> v(n);
    for(auto &i:v) cin>>i;
    vector<vector<int>> s(n,vector<int>(m,0));
    int r=0;
    int dx[]={1,0,-1,0},dy[]={0,1,0,-1};
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<m;j++)
        {
            if(v[i][j]=='#'||s[i][j]) continue;
            r++;
            queue<pair<int,int>> q;
            q.push({i,j});
            s[i][j]=1;
            while(!q.empty())
            {
                auto [x,y]=q.front();
                q.pop();
                for(int k=0;k<4;k++)
                {
                    int nx=x+dx[k],ny=y+dy[k];
                    if(nx>=0&&nx<n&&ny>=0&&ny<m&&v[nx][ny]!='#'&&!s[nx][ny])
                    {
                        s[nx][ny]=1;
                        q.push({nx,ny});
                    }
                }
            }
        }
    }
    cout<<r<<"\n";
}
