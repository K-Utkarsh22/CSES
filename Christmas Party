#include <bits/stdc++.h>
using namespace std;
long long M=1e9+7;
long long N=1e6+1;
int main()
{
    int n;cin>>n;
    if(n==1)
    {
        cout<<0<<"\n";
        return 0;
    }
    vector<long long> d(n+1,0);
    d[0]=1;
    d[1]=0;
    for(int i=2;i<=n;i++)
    {
        d[i]=((i-1)*(d[i-1]+d[i-2]))%M;
    }
    cout<<d[n]<<"\n";
}
