#include <bits/stdc++.h>
using namespace std;
int main()
{
    long long n;cin>>n;
    if(n%4==0 || n%4==3)
    {
        cout<<"YES\n";
        vector<long long>a,b;
        long long s=n*(n+1)/2/2;
        for(long long i=n;i>=1;i--)
        {
            if(i<=s) a.push_back(i),s-=i;
            else b.push_back(i);
        }
        cout<<a.size()<<"\n";
        for(auto &x:a) cout<<x<<" ";
        cout<<"\n"<<b.size()<<"\n";
        for(auto &x:b) cout<<x<<" ";
    }
    else cout<<"NO";
}
