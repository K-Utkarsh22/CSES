#include <bits/stdc++.h>
using namespace std;
long long M=1e9+7;
long long N=1e7+1;
vector<long long> fact(N,0);
long long exp(long long a,long long b)
{
    long long res=1;
    while(b>0)
    {
        if(b&1)
        {
            res=(res*a)%M;
            b--;
        }
        else
        {
            a=(a*a)%M;
            b/=2;
        }
    }
    return res;
}
int main()
{
    fact[0]=1;
    for(long long i=1;i<N;i++)
    {
        fact[i]=(fact[i-1]*i)%M;
    }
    long long n,m;cin>>n>>m;
    long long num=fact[n+m-1];
    long long den=(fact[n-1]*fact[m])%M;
    cout<<(num*exp(den,M-2))%M;
}
