
#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;cin>>n;
    set<pair<long long,int>> s;
    for(int i=0;i<n;i++)
    {
        long long x;cin>>x;
        s.insert({x,i});
    }
    int c=1;
    for(auto it:s) cout<<"it "<<it.first<<"-"<<it.second<<"\n";
    while(s.size()>1)
    {
        auto it=s.begin();
        auto nt=++s.begin();
        if(it->second>=nt->second)
            c++;
        s.erase(it);
    }
    cout<<c;
}
