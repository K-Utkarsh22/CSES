#include <bits/stdc++.h>
using namespace std;
long long M=1e9+7;
long long N=1e6+1;
vector<long long> fact(N,0);
long long exp(long long a,long long b)
{
    long long res=1;
    while(b>0)
    {
        if(b&1)
        {
            res=(res*a)%M;
            b--;
        }
        else
        {
            a=(a*a)%M;
            b/=2;
        }
    }
    return res;
}
long long C(int a,int b)
{
    if(b<0 || b>a) return 0;
    long long n=fact[a];
    long long d=(fact[a-b]*fact[b])%M;
    d=exp(d,M-2);
    return (n*d)%M;
}
int main()
{
    fact[0]=1;
    for(long long i=1;i<N;i++)
    {
        fact[i]=(fact[i-1]*i)%M;
    }
    int n;cin>>n;
    string s;cin>>s;
    int k=s.size();
    if(n%2!=0)
    {
        cout<<0<<"\n";
        return 0;
    }
    int b=0;
    for(char c:s)
    {
        if(c=='(') b++;
        else b--;
        if(b<0 || b>n/2)
        {
            cout<<0<<"\n";
            return 0;
        }
    }
    int r=n-k;
    int o=(n/2)-(k+b)/2;
    if(o<0 || o>r)
    {
        cout<<0<<"\n";
        return 0;
    }
    long long a=(C(r,o)-C(r,o-1)+M)%M;
    cout<<a<<"\n";
}
