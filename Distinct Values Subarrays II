#include <bits/stdc++.h>
using namespace std;
int main()
{
    long long n,k;
    cin>>n>>k;
    vector<int> v(n);
    for(auto &x:v) cin>>x;
    map<int,int> m;
    long long s=0,l=0,d=0;
    for(long long r=0;r<n;r++)
    {
        if(m[v[r]]==0)
            d++;
        m[v[r]]++;
        while(d>k)
        {
            m[v[l]]--;
            if(m[v[l]]==0)
                d--;
            l++;
        }
        s+=(r-l+1);
    }
    cout<<s<<"\n";
}
