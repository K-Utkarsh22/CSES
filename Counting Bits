#include <bits/stdc++.h>
using namespace std;
int main()
{
    long long n;cin>>n;
    long long s=0;
    for(int i=0;i<63;i++)
    {
        long long p=(1LL<<i);
        if(p>n)break;
        long long q=p*2;
        long long d=n/q;
        s+=d*p;
        long long r=n%q;
        s+=max(0LL,r-p+1);
    }
    cout<<s<<"\n";
}
