#include <bits/stdc++.h>
using namespace std;
int main()
{
    long long n,t;
    cin>>n>>t;
    vector<long long> v(n);
    for(auto &x:v) cin>>x;
    long long l=0,h=LLONG_MAX,r=LLONG_MAX;
    while(l<=h)
    {
        long long mid=l+(h-l)/2;
        long long s=0;
        for(int i=0;i<n;i++)
        {
            s+=(mid/v[i]);
            if(s>=t) break;
        }
        if(s>=t)
        {
            r=mid;
            h=mid-1;
        }
        else l=mid+1;
    }
    cout<<r<<"\n";
}
