#include<bits/stdc++.h>
using namespace std;
int main()
{
    int n,a,b;cin>>n>>a>>b;
    vector<long long> v(n+1);
    for(int i=1;i<=n;i++){
        long long x;cin>>x;
        v[i]=v[i-1]+x;
    }
    long long m=LLONG_MIN;
    multiset<long long> s;
    for(int i=a;i<=n;i++){
        if(i>b) s.erase(s.find(v[i-b-1]));
        s.insert(v[i-a]);
        m=max(m,v[i]-*s.begin());
    }
    cout<<m<<"\n";
}
