#include <bits/stdc++.h>
using namespace std;
int main()
{
    string s;cin>>s;
    int n=s.size();
    vector<int> f(26);
    for(auto &c:s) f[c-'A']++;
    auto it=max_element(f.begin(),f.end());
    if(*it>(n+1)/2)
    {
        cout<<-1;
        return 0;
    }
    string a;
    int p=-1;
    for(int r=n;r>0;r--)
    {
        for(int c=0;c<26;c++)
        {
            if(f[c]==0 || c==p) continue;
            f[c]--;
            auto nit=max_element(f.begin(),f.end());
            if(*nit<=r/2)
            {
                a.push_back('A'+c);
                p=c;
                break;
            }
            f[c]++;
        }
    }
    cout<<a;
}
