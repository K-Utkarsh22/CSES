#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;cin>>n;
    vector<pair<long long,int>> v;
    for(int i=0;i<n;i++)
    {
        long long a,b;cin>>a>>b;
        v.push_back({a,1});        
        v.push_back({b,-1});
    }
    sort(v.begin(),v.end());
    long long c=0,m=0;
    for(auto &x:v)
    {
        c+=x.second;
        m=max(m,c);
    }
    cout<<m<<"\n";
}
