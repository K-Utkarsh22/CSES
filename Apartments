#include<bits/stdc++.h>
using namespace std;

int main()
{
    long long n=0,m=0,k=0;
    cin>>n>>m>>k;
    vector<int> a(n),b(m);
    for(auto &x:a) cin>>x;
    for(auto &x:b) cin>>x;
    sort(a.begin(),a.end());
    sort(b.begin(),b.end());
    long long i=0,j=0,r=0;
    while(i<n && j<m)
    {
        if(b[j]<a[i]-k) j++;
        else if(b[j]>a[i]+k) i++;
        else
        {
            a++;
            i++;
            j++;
        }
    }
    cout<<a<<"\n
}
