#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;cin>>n;
    vector<pair<long long,int>> v(n);
    for(int i=0;i<n;i++)
    {
        cin>>v[i].first;
        v[i].second=i;
    }
    int m=INT_MIN;
    sort(v.begin(),v.end());
    for(int i=0;i<n;i++)
    {
            m=max(m,v[i].second-i);
    }
    cout<<m<<"\n";
}
