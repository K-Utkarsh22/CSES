#include<bits/stdc++.h>
using namespace std;
int MOD=1e9+7;
const int N=1e6+1;
int dp[N];
int main()
{
    ios::sync_with_stdio(0);cin.tie(0);
    int n,x;cin>>n>>x;
    vector<int> c(n);
    for(int i=0;i<n;i++) cin>>c[i];
    dp[0]=1;
    for(int j=0;j<n;j++)
    {
        for(int i=1;i<=x;i++)
        {
            if(i>=c[j])
            {
                dp[i]+=dp[i-c[j]];
                if(dp[i]>=MOD) dp[i]-=MOD;
            }
        }
    }
    cout<<dp[x]<<"\n";
}
