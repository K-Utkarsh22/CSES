#include <bits/stdc++.h>
using namespace std;
int main()
{
    long long n,sum=0;cin>>n;
    vector<pair<long long,long long>> v(n);
    for(int i=0;i<n;i++)
    {
        cin>>v[i].first;
        v[i].second=i;
        sum+=v[i].first;
    }
    sort(v.begin(),v.end());
    if(v[n-1].first>sum/2 || sum%2!=0)
    {
        cout<<"IMPOSSIBLE\n";
        return 0;
    }
    long long ind=n-1,top=n-2;
    for(int i=n-1;i>=0;i--)
    {
        if(v[top].first==0) return 0;
        long long m=min(v[ind].first,v[top].first);
        for(int i=0;i<m;i++) cout<<v[ind].second+1<<" "<<v[top].second+1<<"\n";
        v[ind].first-=m;
        v[top].first-=m;
        if(v[ind].first==0)
        {
            ind=top;
        }
        top--;
    }
}
