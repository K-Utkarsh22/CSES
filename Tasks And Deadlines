#include <bits/stdc++.h>
using namespace std;
int main()
{
    int n;cin>>n;
    vector<long long> v(n);
    long long sum=0;
    for(int i=0;i<n;i++)
    {
        long long a,d;
        cin>>a>>d;
        v[i]=a;
        sum+=d;
    }
    sort(v.begin(),v.end());
    long long sum2=0;
    for(int i=n;i>0;i--)
    {
        sum2+=(i*v[n-i]);
    }
    cout<<sum-sum2<<"\n";
}
