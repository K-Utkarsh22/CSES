#include <bits/stdc++.h>
using namespace std;
long long m=1000000007;
int main()
{
    int n;cin>>n;
    vector<string> v(n);
    for(auto &x:v) cin>>x;
    if(v[0][0]=='*')
    {
        cout<<0<<"\n";
        return 0;
    }
    vector<vector<int>> d(n,vector<int>(n,0));
    d[0][0]=1;
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            if(v[i][j]=='*') continue;
            if(i>0)d[i][j]=(d[i][j]+d[i-1][j])%m;
            if(j>0)d[i][j]=(d[i][j]+d[i][j-1])%m;
        }
    }
    cout<<d[n-1][n-1]<<"\n";
}
